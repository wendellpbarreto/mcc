<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12 col-md-10">
        <h2>Terms</h2>
        <ol class="breadcrumb">
            <li class="active"><strong><%= t('Terms') %></strong></li>
        </ol>
    </div>
    <div class="col-sm-12 col-md-2 m-t-lg">
        <%= link_to t('Create'), new_term_path, class: 'btn btn-lg btn-w-m btn-primary btn-outline pull-right' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><%= t('List') %> terms<small></small></h5>
            </div>
            <div class="ibox-content">
                <table id="term-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">Legal representer</th>
                            <th rowspan="2">Cpf cnpj</th>
                            <th rowspan="2">Address</th>
                            <th rowspan="2">Contact</th>
                            <th rowspan="2">Role</th>
                            <th rowspan="2">Start of period</th>
                            <th rowspan="2">End of period</th>
                            <th rowspan="2">Justification description</th>
                            <th rowspan="2">Removing way</th>
                            <th rowspan="2">Returning way</th>
                            <th rowspan="2">Number of items</th>
                            <th class="text-center" colspan="3"><%= t('Actions') %></th>
                        </tr>
                        <tr>
                            <th class="text-center" width="70"><%= t('Show') %></th>
                            <th class="text-center" width="70"><%= t('Edit') %></th>
                            <th class="text-center" width="70"><%= t('Delete') %></th>
                        </tr>
                    </thead>
                <tbody>
                <% @terms.each do |term| %>
                    <tr>
                        <td><%= term.legal_representer %></td>
                        <td><%= term.cpf_cnpj %></td>
                        <td><%= term.address %></td>
                        <td><%= term.contact %></td>
                        <td><%= term.role %></td>
                        <td><%= term.start_of_period %></td>
                        <td><%= term.end_of_period %></td>
                        <td><%= term.justification_description %></td>
                        <td><%= term.removing_way %></td>
                        <td><%= term.returning_way %></td>
                        <td><%= term.number_of_items %></td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, term, class: 'btn btn-info btn-outline btn-sm'%>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_term_path(term), class: 'btn btn-success btn-outline btn-sm' %>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, term, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-outline btn-sm' %>
                        </td>
                    </tr>
                <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
<% content_for :javascript do %>
<script>
$(document).ready(function() {
    $('#term-table').dataTable({
        responsive: true,
        "columnDefs": [ 
            { 
                "targets": [11, 12, 13], 
                "orderable": false 
            } 
        ],
    });
});
</script>
<% end %>