<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12 col-md-10">
        <h2>Justifications</h2>
        <ol class="breadcrumb">
            <li class="active"><strong><%= t('Justifications') %></strong></li>
        </ol>
    </div>
    <div class="col-sm-12 col-md-2 m-t-lg">
        <%= link_to t('Create'), new_justification_path, class: 'btn btn-lg btn-w-m btn-primary btn-outline pull-right' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><%= t('List') %> justifications<small></small></h5>
            </div>
            <div class="ibox-content">
                <table id="justification-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">Text</th>
                            <th class="text-center" colspan="3"><%= t('Actions') %></th>
                        </tr>
                        <tr>
                            <th class="text-center" width="70"><%= t('Show') %></th>
                            <th class="text-center" width="70"><%= t('Edit') %></th>
                            <th class="text-center" width="70"><%= t('Delete') %></th>
                        </tr>
                    </thead>
                <tbody>
                <% @justifications.each do |justification| %>
                    <tr>
                        <td><%= justification.text %></td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, justification, class: 'btn btn-info btn-outline btn-sm'%>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_justification_path(justification), class: 'btn btn-success btn-outline btn-sm' %>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, justification, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-outline btn-sm' %>
                        </td>
                    </tr>
                <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
<% content_for :javascript do %>
<script>
$(document).ready(function() {
    $('#justification-table').dataTable({
        responsive: true,
        "columnDefs": [ 
            { 
                "targets": [1, 2, 3], 
                "orderable": false 
            } 
        ],
    });
});
</script>
<% end %>