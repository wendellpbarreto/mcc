<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-12 col-md-10">
    <h2>Artworks</h2>
    <ol class="breadcrumb">
      <li><%= link_to t('Artworks'), artworks_path %></li>
      <li class="active"><strong><%= t('Edit') %></strong></li>
    </ol>
  </div>
  <div class="col-sm-12 col-md-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('View') %> artwork <%= @artwork.name %><small></small></h5>
        <div class="ibox-tools">
          <div class="pull-right">
            <%= link_to '<i class="fa fa-reply"></i>'.html_safe, artworks_path %>
          </div>
        </div>
      </div>
      <div class="ibox-content">
        <div class="row">
          <label class="control-label col-sm-2">Image</label>
          <div class="col-sm-10">
            <%= @artwork.image %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Register number</label>
          <div class="col-sm-10">
            <%= @artwork.register_number %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Name</label>
          <div class="col-sm-10">
            <%= @artwork.name %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Material</label>
          <div class="col-sm-10">
            <%= @artwork.material %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Dimensions</label>
          <div class="col-sm-10">
            <%= @artwork.dimensions %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">State of conservation</label>
          <div class="col-sm-10">
            <%= @artwork.state_of_conservation %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Observation</label>
          <div class="col-sm-10">
            <%= @artwork.observation %>
          </div>
        </div>
        <div class="row">
          <label class="control-label col-sm-2">Term</label>
          <div class="col-sm-10">
            <%= @artwork.term %>
          </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="row clearfix">
          <div class="col-sm-10 col-sm-offset-2">
            <%= link_to( t('Back'), artworks_path, class: 'btn btn-white' ) %>
            <%= link_to t('Edit'), edit_artwork_path(@artwork), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>