<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12 col-md-10">
        <h2>Artworks</h2>
        <ol class="breadcrumb">
            <li class="active"><strong><%= t('Artworks') %></strong></li>
        </ol>
    </div>
    <div class="col-sm-12 col-md-2 m-t-lg">
        <%= link_to t('Create'), new_artwork_path, class: 'btn btn-lg btn-w-m btn-primary btn-outline pull-right' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><%= t('List') %> artworks<small></small></h5>
            </div>
            <div class="ibox-content">
                <table id="artwork-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">Image</th>
                            <th rowspan="2">Register number</th>
                            <th rowspan="2">Name</th>
                            <th rowspan="2">Material</th>
                            <th rowspan="2">Dimensions</th>
                            <th rowspan="2">State of conservation</th>
                            <th rowspan="2">Observation</th>
                            <th rowspan="2">Term</th>
                            <th class="text-center" colspan="3"><%= t('Actions') %></th>
                        </tr>
                        <tr>
                            <th class="text-center" width="70"><%= t('Show') %></th>
                            <th class="text-center" width="70"><%= t('Edit') %></th>
                            <th class="text-center" width="70"><%= t('Delete') %></th>
                        </tr>
                    </thead>
                <tbody>
                <% @artworks.each do |artwork| %>
                    <tr>
                        <td><%= artwork.image %></td>
                        <td><%= artwork.register_number %></td>
                        <td><%= artwork.name %></td>
                        <td><%= artwork.material %></td>
                        <td><%= artwork.dimensions %></td>
                        <td><%= artwork.state_of_conservation %></td>
                        <td><%= artwork.observation %></td>
                        <td><%= artwork.term %></td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, artwork, class: 'btn btn-info btn-outline btn-sm'%>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_artwork_path(artwork), class: 'btn btn-success btn-outline btn-sm' %>
                        </td>
                        <td class="text-center">
                            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, artwork, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-outline btn-sm' %>
                        </td>
                    </tr>
                <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
<% content_for :javascript do %>
<script>
$(document).ready(function() {
    $('#artwork-table').dataTable({
        responsive: true,
        "columnDefs": [ 
            { 
                "targets": [8, 9, 10], 
                "orderable": false 
            } 
        ],
    });
});
</script>
<% end %>